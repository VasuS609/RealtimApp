{
  "name": "cavlo",
  "version": "1.0.0",
  "description": "Scalable real-time chat application with WebSocket and Auth0",
  "private": true,
  "scripts": {
    "start": "npm run dev",
    "dev": "concurrently \"npm run client\" \"npm run server\"",
    "client": "cd chat-app && npm run dev",
    "server": "cd relayer-ws && npm run dev",
    "build": "cd chat-app && npm run build",
    "install:all": "npm install && cd chat-app && npm install && cd ../relayer-ws && npm install"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/VasuS609/RealtimApp.git"
  },
  "keywords": [
    "websocket",
    "chat",
    "real-time",
    "auth0",
    "react",
    "scalable"
  ],
  "author": "VasuS609",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/VasuS609/RealtimApp/issues"
  },
  "homepage": "https://github.com/VasuS609/RealtimApp#readme",
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "dependencies": {
    "clsx": "^2.1.1",
    "motion": "^12.23.25",
    "tailwind-merge": "^3.4.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
