{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "moduleResolution": "bundler",
    "strict": true,    
    "jsxImportSource": "react",
    "jsx": "react-jsx",
    "isolatedModules": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "lib": ["ESNext", "DOM"],
    "noImplicitAny": false,
    "types": ["vite/client", "node"]
  },
  "include": ["src"],
  "exclude": ["node_modules", "src/landingPage"],
  "ts-node": {
    "skipLibCheck": true
  }
}
